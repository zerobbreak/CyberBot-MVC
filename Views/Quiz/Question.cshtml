@model ChatBot.Models.QuizQuestion
@{
    ViewData["Title"] = "Question " + (ViewBag.Index + 1);
    int current = ViewBag.Index + 1;
    int total = ViewBag.Total;
    int progress = (int)((double)current / total * 100);
}

<div class="container mt-5" style="max-width: 800px;">
    <!-- Progress Bar -->
    <div class="progress mb-4" style="height: 6px; background-color: var(--bg-panel);">
        <div class="progress-bar bg-neon" role="progressbar" style="width: @progress%; box-shadow: 0 0 10px var(--accent-primary);"></div>
    </div>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <span class="badge bg-dark border border-secondary text-muted">Question @current / @total</span>
        <span class="text-neon fw-bold">Score: @ViewBag.Score</span>
    </div>

    <div class="card mb-4 border-0">
        <div class="card-body p-5 text-center">
            <h3 class="card-title mb-0">@Model.QuestionText</h3>
        </div>
    </div>

    @if (TempData["Feedback"] != null)
    {
        var isCorrect = TempData["Feedback"].ToString().StartsWith("Correct");
        <div class="alert @(isCorrect ? "alert-success bg-success text-white border-0" : "alert-danger bg-danger text-white border-0") mb-4 p-4 rounded-3">
            <div class="d-flex align-items-center">
                <i class="bi @(isCorrect ? "bi-check-circle-fill" : "bi-x-circle-fill") fs-3 me-3"></i>
                <div>
                    <h5 class="alert-heading mb-1">@(isCorrect ? "Correct!" : "Incorrect")</h5>
                    <p class="mb-0 opacity-75">@TempData["Feedback"]</p>
                </div>
            </div>
        </div>
        
        <div class="text-center">
            <a asp-action="Question" asp-route-index="@(ViewBag.Index + 1)" asp-route-score="@ViewBag.Score" 
               class="btn btn-primary btn-lg px-5">
                Next Question <i class="bi bi-arrow-right ms-2"></i>
            </a>
        </div>
    }
    else
    {
        <form asp-action="SubmitAnswer" method="post">
            <input type="hidden" name="index" value="@ViewBag.Index" />
            <input type="hidden" name="score" value="@ViewBag.Score" />
            
            <div class="row g-3">
                @for (int i = 0; i < Model.Options.Count; i++)
                {
                    <div class="col-md-6">
                        <input type="radio" class="btn-check" name="selectedOption" id="option-@i" value="@i" required>
                        <label class="btn btn-outline-light w-100 p-4 h-100 d-flex align-items-center justify-content-center text-start" for="option-@i" 
                               style="border-color: var(--border-color); background-color: var(--bg-panel);">
                            <span class="fs-5">@Model.Options[i]</span>
                        </label>
                    </div>
                }
            </div>
            
            <div class="mt-5 text-center">
                <button type="submit" class="btn btn-success btn-lg px-5">
                    Submit Answer
                </button>
            </div>
        </form>
    }
</div>

<style>
    .btn-check:checked + .btn {
        background-color: var(--accent-primary);
        border-color: var(--accent-primary);
        color: #000;
        box-shadow: 0 0 15px rgba(0, 200, 255, 0.3);
    }
    .bg-neon { background-color: var(--accent-primary); }
</style>
