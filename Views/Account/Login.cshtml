@{
    ViewData["Title"] = "Login";
    Layout = null; // Use a separate layout or no layout for login page to keep it clean
}

<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login - CyberChat</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body class="d-flex align-items-center justify-content-center" style="height: 100vh; background-color: var(--bg-dark);">

    <div class="card p-5 border-primary" style="max-width: 400px; width: 100%; box-shadow: 0 0 30px rgba(0, 200, 255, 0.2);">
        <div class="text-center mb-4">
            <i class="bi bi-shield-lock-fill text-neon display-1"></i>
            <h2 class="mt-3 fw-bold">CyberChat</h2>
            <p class="text-muted">Secure Login</p>
        </div>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger">@ViewBag.Error</div>
        }

        <form asp-action="Login" method="post">
            <div class="mb-4">
                <label class="form-label text-muted">Username</label>
                <div class="input-group">
                    <span class="input-group-text bg-dark border-secondary text-neon"><i class="bi bi-person"></i></span>
                    <input type="text" name="username" class="form-control bg-dark border-secondary text-white" placeholder="Enter your alias" required autofocus />
                </div>
            </div>
            
            <button type="submit" class="btn btn-primary w-100 py-2 fw-bold">
                <i class="bi bi-box-arrow-in-right me-2"></i>Access System
            </button>
        </form>
    </div>

</body>
</html>
